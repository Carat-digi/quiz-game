## Copy this file to .env and fill the values

# Server port
PORT=3001

# MongoDB connection (production/development)
MONGODB_URI=mongodb://localhost:27017/quiz-game

# MongoDB connection for tests (used when NODE_ENV=test)
TEST_MONGODB_URI=mongodb://localhost:27017/quiz-game-test

# JWT secrets
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Application environment
NODE_ENV=development
# Token settings (optional)
# ACCESS_TOKEN_EXPIRES_IN=15m
# REFRESH_TOKEN_EXPIRES_DAYS=30
